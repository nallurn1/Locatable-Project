<p id="notice"><%= notice %></p>
<h1 class="text-center">Creatings Alerts</h1>
<h1></h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Alert text</th>
      <th>Contact's Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <td><%= alert.alert_text %></td>
        <td><%= alert.contact_id %></td>
        <td><%= link_to 'Show', alert %></td>
        <td><%= link_to 'Edit', edit_alert_path(alert) %></td>
        <td><%= link_to 'Delete', alert, method: :delete, data: { confirm: 'Are you sure you want to delet the alert?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="buttons-container">
<%= link_to 'Create New Alert', new_alert_path, class: "btn btn-dark btn-lg" %>


