%>

<p id="notice"><%= notice %></p>

<h1>Your Profile</h1>

<table class="table table-striped",style= "width:100%;text-align:left";>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Home Address Line1</th>
      <th>Home Address line2</th>
      <th>City</th>
      <th>State</th>
      <th>Zipcode</th>
      <th>Country</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.user_name %></td>
        <td><%= user_profile.user_email %></td>
        <td><%= user_profile.user_phone %></td>
        <td><%= user_profile.user_address_line1 %></td>
        <td><%= user_profile.user_address_line2 %></td>
        <td><%= user_profile.user_city %></td>
        <td><%= user_profile.user_state %></td>
        <td><%= user_profile.user_zipcode %></td>
        <td><%= user_profile.user_country %></td>
        <td><%= link_to 'Show', user_profile, style: "color: black;" %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile), style: "color: black;" %></td>
        <%# <td><%= link_to 'Delete', user_profile, style: "color: black;", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="buttons-container">
<%= link_to 'Create New Profile', new_user_profile_path, class: "btn btn-dark btn-lg" %>

