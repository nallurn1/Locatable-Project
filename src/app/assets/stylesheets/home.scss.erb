div.container p,
div.container h1,
div.container th {
  margin-bottom: 50px;
}

div.container .background h1 {
  margin: 20px 0 0 0;
  color: white;
}

div.container .background h2 {
  color: white;
  font-size: 20px;
  margin: 20px 0 0 0;
}

div.container .home-content p,
div.container .home-content h2 {
  color: white;
}

div.container .background {
  width: 100%;
  height: fit-content;
  text-align: center;
}

img {
  img-repeat: repeat;
  width: 40%;
}

div.buttons-container {
  margin: 0 auto;
  width: 70%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

div.background-filler {
  background-color: rgb(0,0,0);
  width: 100vw;
  height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  z-index: -100;
}

label.align {
  text-align: right;
  width: 200px;
}

.line {
  display: block;
  margin-left: 80px;
}

label.left-align {
  display: block;
  margin-left: 20px;
}

div.form_item {
  display: block;
}

input[type=checkbox].tag {
  margin-right: 7px;
}

section.delete_tags {
  float: left;
}

